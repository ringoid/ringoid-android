<resources>

    <style name="AppThemeLight" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/colorAccentGreen</item>
        <item name="pageBackground">@android:color/white</item>
        <item name="colorTextPrimary">#000</item>
        <item name="drawableThemeLogin">@drawable/ic_theme_light_24dp</item>
        <item name="colorDivider">@color/divider_light</item>

    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/colorAccentGreen</item>
        <item name="pageBackground">@color/gray_bg</item>
        <item name="colorTextPrimary">#fff</item>
        <item name="drawableThemeLogin">@drawable/ic_theme_dark_24dp</item>
        <item name="colorDivider">@color/divider_dark</item>

    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <style name="AppThemeLight.Warning">
        <item name="colorAccent">@color/colorWarning</item>
    </style>

    <style name="bottomMenuItem">
        <item name="android:padding">16dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="selectableImage">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
    </style>

    <style name="menuImageEnd">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingBottom">28dp</item>
        <item name="android:paddingStart">28dp</item>
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
    </style>


    <style name="menuImageStart">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingBottom">28dp</item>
        <item name="android:paddingEnd">28dp</item>
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
    </style>

    <style name="buttonBase">
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Button</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="buttonBase.Dialog">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="buttonBase.wide">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Body1</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="buttonBase.wide.Red">
        <item name="android:background">@drawable/rectangle_rounded_red</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="buttonBase.wide.Green">
        <item name="android:background">@drawable/rectangle_rounded_green</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="settings_menu_item">
        <item name="android:textSize">17sp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Body1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?colorTextPrimary</item>

    </style>

    <style name="settings_privacy_item_message">
        <item name="android:textSize">17sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Body1</item>
    </style>

    <style name="settings_privacy_item_value">
        <item name="android:textSize">15sp</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Caption</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="themeDialogFullscreen" />

</resources>
