<resources>

    <style name="AppThemeLight" parent="AppThemeLightBase" />

    <style name="AppThemeDark" parent="AppThemeDarkBase" />

    <style name="AppThemeLightBase" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/colorAccentGreen</item>
        <item name="pageBackground">@android:color/white</item>
        <item name="colorTextPrimary">#000</item>
        <item name="colorDivider">@color/divider_light</item>
        <item name="colorTabBackground">#b4ffffff</item>
        <item name="colorTextDialog">@android:color/black</item>
        <item name="colorTabTextNotActive">#8e8e8e</item>
        <item name="colorComposeBackground">#998e8e8e</item>
        <item name="drawableThemeLogin">@drawable/ic_theme_light_24dp</item>
        <item name="drawableTheme">@drawable/ic_theme_settings_light_24dp</item>
        <item name="drawableLegal">@drawable/ic_privacy_policy_light_24</item>
        <item name="drawableSupport">@drawable/ic_settings_feedback_light_24dp</item>
        <item name="drawableLogout">@drawable/ic_logout_gray_light_16dp</item>
        <item name="drawableServices">@drawable/ic_settings_terms_light_24dp</item>
        <item name="drawableLicenses">@drawable/ic_settings_licenses_light_24dp</item>
        <item name="drawableBack">@drawable/ic_arrow_back_grey_light_24dp</item>
        <item name="drawableClose">@drawable/ic_arrow_close_grey_light_24dp</item>
        <item name="drawableSettings">@drawable/ic_menu_settings_gray_24dp</item>
        <item name="drawableSplash">@drawable/splash_center_dark</item>

    </style>

    <style name="AppThemeDarkBase" parent="Theme.AppCompat.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/colorAccentGreen</item>
        <item name="pageBackground">@color/gray_bg</item>
        <item name="colorTextPrimary">#fff</item>
        <item name="colorDivider">@color/divider_dark</item>
        <item name="colorTabBackground">#b4161d24</item>
        <item name="colorTextDialog">@color/grey_middle</item>
        <item name="colorTabTextNotActive">#5d5e63</item>
        <item name="colorComposeBackground">#991f262c</item>
        <item name="drawableThemeLogin">@drawable/ic_theme_dark_24dp</item>
        <item name="drawableTheme">@drawable/ic_theme_settings_dark_24dp</item>
        <item name="drawableLegal">@drawable/ic_privacy_policy_24</item>
        <item name="drawableSupport">@drawable/ic_settings_feedback_24dp</item>
        <item name="drawableLogout">@drawable/ic_logout_gray_16dp</item>
        <item name="drawableServices">@drawable/ic_settings_terms_24dp</item>
        <item name="drawableLicenses">@drawable/ic_settings_licenses_24dp</item>
        <item name="drawableBack">@drawable/ic_arrow_back_grey_24dp</item>
        <item name="drawableClose">@drawable/ic_arrow_close_grey_24dp</item>
        <item name="drawableSettings">@drawable/ic_menu_settings_24dp</item>
        <item name="drawableSplash">@drawable/splash_center</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <style name="Warning">
        <item name="android:textColor">?colorTextDialog</item>
        <item name="colorAccent">@color/colorWarning</item>
    </style>

    <style name="bottomMenuItem">
        <item name="android:padding">12dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">@dimen/toolbar_height_with_statusbar</item>
    </style>

    <style name="selectableImage">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_width">@dimen/toolbar_height_with_statusbar</item>
        <item name="android:layout_height">@dimen/toolbar_height_with_statusbar</item>
    </style>

    <style name="menuImageEnd">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingBottom">28dp</item>
        <item name="android:paddingStart">28dp</item>
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
    </style>


    <style name="menuImageStart">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingBottom">28dp</item>
        <item name="android:paddingEnd">28dp</item>
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
    </style>

    <style name="buttonBase">
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Button</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="buttonBase.Dialog">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="buttonBase.wide">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Body1</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="buttonBase.wide.Red">
        <item name="android:background">@drawable/rectangle_rounded_red</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="buttonBase.wide.Green">
        <item name="android:background">@drawable/rectangle_rounded_green</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="settings_menu_item">
        <item name="android:textSize">17sp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Body1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?colorTextPrimary</item>

    </style>

    <style name="themeDialogFullscreen" />

    <style name="itemTabLikes">
        <item name="android:textSize">17sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textColor">?colorTextPrimary</item>

        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
    </style>

</resources>
