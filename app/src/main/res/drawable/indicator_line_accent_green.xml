<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">

        <shape android:shape="rectangle">
            <corners android:radius="2dp" />
            <size
                android:width="1dp"
                android:height="3dp" />
            <solid android:color="@color/colorAccentGreen" />

            <stroke
                android:width="0.25dp"
                android:color="#444" />
        </shape>
    </item>
</layer-list>