<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="3dp"
        android:left="1dp"
        android:right="3dp"
        android:top="1dp">

        <shape android:shape="oval">
            <corners android:radius="2dp" />
            <size
                android:width="1dp"
                android:height="2.5dp" />
            <solid android:color="@color/dot_active" />
        </shape>
    </item>

    <item
        android:bottom="3dp"
        android:left="1dp"
        android:right="3dp"
        android:top="1dp">

        <shape android:shape="oval">
            <stroke
                android:width="1dp"
                android:color="#e7e7e7" />
        </shape>
    </item>
</layer-list>