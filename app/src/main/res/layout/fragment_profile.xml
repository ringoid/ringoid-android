<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/flToolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@android:color/white">

        <com.ringoid.view.ui.view.ViewToolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            app:is_show_back="false" />

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_gravity="bottom"
            android:background="@color/toolbar_shadow" />

        <ImageView
            android:id="@+id/tvSettings"
            style="@style/selectableImage"
            android:layout_gravity="end|center_vertical"
            android:src="@drawable/ic_settings_24dp" />


    </FrameLayout>

    <FrameLayout
        android:id="@+id/flPhotos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintDimensionRatio="3:4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flToolbar">

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/srlProfilePhotos"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvItems"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/view_image_profile" />

        </android.support.v4.widget.SwipeRefreshLayout>

        <FrameLayout
            android:id="@+id/flDots"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/flToolbar" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/flEmpty"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flToolbar"
        tools:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="64dp"
            android:layout_marginStart="64dp"
            android:gravity="center"
            android:text="@string/message_profile_empty"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
            android:textSize="17sp" />

    </FrameLayout>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabProfile"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginBottom="72dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_add_white_24dp"
        android:theme="@style/AppTheme.Green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>