<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/dialog_photo_upload_first_title"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
        android:textColor="?colorTextPrimary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvFeed"
            style="@style/buttonBase"
            android:layout_width="0dp"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:background="?selectableItemBackground"
            android:text="@string/dialog_photo_upload_first_feed"
            android:textColor="?colorTextPrimary" />

        <TextView
            android:id="@+id/tvPhotoAdd"
            style="@style/buttonBase"
            android:layout_width="0dp"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:background="?selectableItemBackground"
            android:text="@string/dialog_photo_upload_first_photo_add"
            android:textColor="@color/colorAccentGreen" />

    </LinearLayout>

</LinearLayout>