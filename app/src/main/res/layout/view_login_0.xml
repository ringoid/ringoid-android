<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llLoginTerms"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingTop="60dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/splash_center" />

            <CheckBox
                android:id="@+id/cbTerms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:gravity="top"
                android:paddingStart="20dp"
                android:text="@string/checkbox_terms"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                android:textColor="@color/gray"
                android:textColorLink="@color/gray"
                android:textSize="17sp"
                android:theme="@style/AppTheme.Green" />

            <CheckBox
                android:id="@+id/cbAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:gravity="top"
                android:paddingStart="20dp"
                android:text="@string/checkbox_age"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                android:textColor="@color/gray"
                android:textColorLink="@color/gray"
                android:textSize="17sp"
                android:theme="@style/AppTheme.Green" />

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tvLoginTermsAgreement"
        style="@style/buttonBase.Colored.Green"
        android:text="@string/button_accept_terms" />

</LinearLayout>