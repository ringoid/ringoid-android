<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivBack"
        style="@style/selectableImage"
        android:src="@drawable/ic_arrow_back_black_24dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/login_sms" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
        tools:text="@string/login_sms" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/border_rounded_gray"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etCodeSMS"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:hint="@string/hint_register_confirm"
            android:inputType="phone"
            android:padding="16dp" />

        <ImageView
            style="@style/selectableImage"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_content_paste_black_24dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" />

    <TextView
        android:id="@+id/tvCodeSMSConfirm"
        style="@style/buttonColored"
        android:layout_margin="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rectangle_rounded_green"
        android:padding="16dp"
        android:text="@string/button_continue"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1" />

</LinearLayout>