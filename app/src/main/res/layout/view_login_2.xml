<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llLoginSMS"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivBack"
        style="@style/selectableImage"
        android:src="@drawable/ic_arrow_back_black_24dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/login_sms"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title" />

    <TextView
        android:id="@+id/tvPhoneHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
        android:textColor="@color/colorAccentGreen"
        tools:text="123" />

    <LinearLayout
        android:id="@+id/vContainerSMSCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/border_rounded_gray"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etCodeSMS"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:gravity="center|center_vertical"
            android:hint="@string/hint_dots_4"
            android:inputType="number"
            android:paddingBottom="16dp"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:paddingTop="16dp"
            android:textSize="30sp"
            android:theme="@style/AppTheme.Green" />

        <ImageView
            android:id="@+id/ivPasteSMS"
            style="@style/selectableImage"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_content_paste_black_24dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" />

    <TextView
        android:id="@+id/tvCodeSMSError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:padding="12dp"
        android:text="@string/button_code_error"
        android:textColor="#989898"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvCodeSMSConfirm"
        style="@style/buttonBase.Colored.Green"
        android:text="@string/button_continue" />

</LinearLayout>