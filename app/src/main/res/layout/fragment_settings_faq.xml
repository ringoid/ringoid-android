<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.ringoid.view.ui.view.ViewToolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        app:is_show_back="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/view_privacy_item_photos" />

            <include layout="@layout/view_privacy_item_phone" />

            <include layout="@layout/view_privacy_item_location" />

            <include layout="@layout/view_privacy_item_messages" />

            <include layout="@layout/view_privacy_item_age" />

            <include layout="@layout/view_privacy_item_activity" />

        </LinearLayout>


    </ScrollView>

</LinearLayout>