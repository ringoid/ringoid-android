<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/flContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/toolbar_height_with_statusbar" />

    <LinearLayout
        android:id="@+id/llBottomAppBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height_with_statusbar"
        android:layout_gravity="bottom"
        android:background="#161d24"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivMenuExplore"
            style="@style/bottomMenuItem"
            android:src="@drawable/ic_menu_explore_24dp" />

        <ImageView
            android:id="@+id/ivMenuMatches"
            style="@style/bottomMenuItem"
            android:src="@drawable/ic_menu_matches_24dp" />

        <ImageView
            android:id="@+id/ivMenuMessages"
            style="@style/bottomMenuItem"
            android:src="@drawable/ic_menu_message_24dp" />

        <ImageView
            android:id="@+id/ivMenuLikes"
            style="@style/bottomMenuItem"
            android:src="@drawable/ic_menu_favorite_24dp" />

        <ImageView
            android:id="@+id/ivMenuProfile"
            style="@style/bottomMenuItem"
            android:src="@drawable/ic_menu_profile_24dp" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/flAnimationPopup"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</FrameLayout>