<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/flContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <FrameLayout
        android:id="@+id/flToolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@android:color/white">

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_gravity="bottom"
            android:background="@color/toolbar_shadow" />

        <ImageView
            android:id="@+id/ivPrivacy"
            style="@style/selectableImage"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="48dp"
            tools:src="@drawable/ic_privacy_all_gray_24dp" />

        <ImageView
            android:id="@+id/tvSettings"
            style="@style/selectableImage"
            android:layout_gravity="end|center_vertical"
            android:src="@drawable/ic_settings_24dp" />

        <com.ringoid.view.ui.view.ViewToolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            app:is_show_back="false" />

    </FrameLayout>


    <LinearLayout
        android:id="@+id/llBottomAppBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:layout_gravity="bottom"
        android:background="@color/white95"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivMenuProfile"
            style="@style/bottomMenuItem"
            android:src="@drawable/ic_menu_profile_24dp" />

        <ImageView
            android:id="@+id/ivMenuLikes"
            style="@style/bottomMenuItem"
            android:src="@drawable/ic_menu_favorite_24dp" />

        <ImageView
            android:id="@+id/ivMenuMessages"
            style="@style/bottomMenuItem"
            android:src="@drawable/ic_menu_message_24dp" />

        <ImageView
            android:id="@+id/ivMenuExplore"
            style="@style/bottomMenuItem"
            android:src="@drawable/ic_menu_explore_24dp" />

    </LinearLayout>

</FrameLayout>