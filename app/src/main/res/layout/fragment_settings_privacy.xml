<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivBack"
            style="@style/selectableImage"
            android:src="@drawable/ic_arrow_back_black_24dp" />

        <include
            layout="@layout/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="46dp" />

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/view_privacy_item_photos"/>
            <include layout="@layout/view_privacy_item_phone"/>
            <include layout="@layout/view_privacy_item_location"/>
            <include layout="@layout/view_privacy_item_messages"/>
            <include layout="@layout/view_privacy_item_age"/>
            <include layout="@layout/view_privacy_item_activity"/>
            <include layout="@layout/view_privacy_item_policy"/>

        </LinearLayout>


    </ScrollView>

</LinearLayout>