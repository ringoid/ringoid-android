<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llLoginInfo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical">


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/login_birth" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/login_details_title"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="@string/login_birth_message"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/border_rounded_gray">

        <TextView
            android:id="@+id/tvDateBirth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:hint="@string/message_date_birth"
            android:padding="16dp" />

    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="@string/login_birth_gender_message"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvSexMale"
            android:layout_width="114dp"
            android:layout_height="114dp"
            android:drawableTop="@drawable/ic_sex_male_blue_60dp"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/male"
            android:textColor="@color/blue" />

        <View
            android:layout_width="32dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tvSexFemale"
            style="@style/selectableImage"
            android:layout_width="114dp"
            android:layout_height="114dp"
            android:drawableTop="@drawable/ic_sex_female_red_60dp"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/female"
            android:textColor="@color/pink" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" />

    <TextView
        android:id="@+id/tvRegister"
        style="@style/buttonColored"
        android:layout_margin="16dp"
        android:background="@drawable/rectangle_rounded_green"
        android:padding="16dp"
        android:text="@string/button_register_confirm"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
        android:textSize="18sp" />

</LinearLayout>