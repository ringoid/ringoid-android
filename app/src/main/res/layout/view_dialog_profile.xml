<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/flContent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="4dp"
    android:paddingEnd="8dp"
    android:paddingTop="4dp"
    tools:background="#cc000000">

    <ImageView
        android:id="@+id/ivTriangleTop"
        android:layout_width="16dp"
        android:layout_height="8dp"
        android:layout_gravity="end"
        android:layout_marginEnd="4dp"
        android:src="@drawable/ic_triangle_top_16dp" />

    <TextView
        android:id="@+id/tvRemove"
        style="@style/dialog_menu_item"
        android:layout_width="wrap_content"
        android:layout_gravity="end"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_dialog"
        android:drawableStart="@drawable/ic_delete_red_24dp"

        android:paddingBottom="20dp"
        android:paddingEnd="24dp"
        android:paddingTop="20dp"

        android:text="@string/dialog_menu_profile_remove"
        android:textSize="18sp" />

</FrameLayout>