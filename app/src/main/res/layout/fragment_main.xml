<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <TextView
            android:id="@+id/tvWallet"
            style="@style/textImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawableStart="@drawable/ic_account_balance_wallet_black_24dp"
            tools:text="123" />

        <ImageView
            style="@style/selectableImage"
            android:layout_gravity="end"
            android:src="@drawable/ic_settings_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/app_name"
            android:textAllCaps="true"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Title" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/flContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="56dp"
        android:layout_marginTop="56dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivMenuRank"
                style="@style/bottomMenuItem"
                android:src="@drawable/ic_sort_black_24dp" />

            <ImageView
                android:id="@+id/ivMenuLikes"
                style="@style/bottomMenuItem"
                android:src="@drawable/ic_favorite_black_24dp" />

            <ImageView
                android:id="@+id/ivMenuProfile"
                style="@style/bottomMenuItem"
                android:src="@drawable/ic_person_black_24dp" />

            <ImageView
                android:id="@+id/ivMenuMessages"
                style="@style/bottomMenuItem"
                android:src="@drawable/ic_message_black_24dp" />

            <ImageView
                android:id="@+id/ivMenuExplore"
                style="@style/bottomMenuItem"
                android:src="@drawable/ic_search_black_24dp" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>