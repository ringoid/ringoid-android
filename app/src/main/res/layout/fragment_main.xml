<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/flContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <FrameLayout
        android:id="@+id/flToolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@android:color/white">

        <TextView
            android:visibility="gone"
            android:id="@+id/tvWallet"
            style="@style/textImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawableStart="@drawable/ic_account_balance_wallet_black_24dp"
            tools:text="123" />

        <ImageView
            android:id="@+id/tvSettings"
            style="@style/selectableImage"
            android:layout_gravity="end"
            android:src="@drawable/ic_settings_black_24dp"
            android:tint="#757575" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/app_name"
            android:textAllCaps="true"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
            android:textColor="#757575" />

    </FrameLayout>

    <ScrollView
        android:id="@+id/svBottomAppBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:layout_gravity="bottom"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivMenuProfile"
                style="@style/bottomMenuItem"
                android:src="@drawable/ic_person_black_24dp"
                android:tint="#757575" />

            <ImageView
                android:id="@+id/ivMenuRank"
                style="@style/bottomMenuItem"
                android:src="@drawable/ic_sort_black_24dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/ivMenuLikes"
                style="@style/bottomMenuItem"
                android:src="@drawable/ic_favorite_black_24dp"
                android:tint="#757575" />

            <ImageView
                android:id="@+id/ivMenuMessages"
                style="@style/bottomMenuItem"
                android:src="@drawable/ic_message_black_24dp"
                android:tint="#757575"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/ivMenuExplore"
                style="@style/bottomMenuItem"
                android:src="@drawable/ic_person_pin_circle_black_24dp"
                android:tint="#757575" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>