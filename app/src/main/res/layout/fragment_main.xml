<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/flContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <FrameLayout
        android:id="@+id/flToolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/colorPrimary">

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_gravity="bottom"
            android:background="#f16868" />

        <TextView
            android:id="@+id/tvWallet"
            style="@style/textImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawableStart="@drawable/ic_account_balance_wallet_black_24dp"
            android:visibility="gone"
            tools:text="123" />

        <ImageView
            android:id="@+id/tvSettings"
            style="@style/selectableImage"
            android:layout_gravity="end|center_vertical"
            android:src="@drawable/ic_settings_white_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:text="@string/app_name"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
            android:textColor="@android:color/white" />

    </FrameLayout>


    <LinearLayout
        android:id="@+id/llBottomAppBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivMenuProfile"
            style="@style/bottomMenuItem"
            android:src="@drawable/ic_person_white_24dp" />

        <ImageView
            android:id="@+id/ivMenuLikes"
            style="@style/bottomMenuItem"
            android:src="@drawable/ic_menu_favorite_white_24dp" />

        <ImageView
            android:id="@+id/ivMenuMessages"
            style="@style/bottomMenuItem"
            android:src="@drawable/ic_menu_message_white_24dp" />

        <ImageView
            android:id="@+id/ivMenuExplore"
            style="@style/bottomMenuItem"
            android:src="@drawable/ic_person_pin_circle_white_24dp" />

    </LinearLayout>

</FrameLayout>