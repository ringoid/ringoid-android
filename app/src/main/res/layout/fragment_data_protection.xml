<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.ringoid.view.ui.view.ViewToolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        app:is_show_back="true"
        app:toolbar_title="@string/title_legal">

        <ImageView
            android:id="@+id/ivClose"
            style="@style/selectableImage"
            android:layout_gravity="end"
            android:src="@drawable/ic_arrow_close_grey_24dp" />

    </com.ringoid.view.ui.view.ViewToolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/llVersion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:orientation="vertical"
                android:paddingStart="56dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/about"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tvVersion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                    android:textColor="@color/grey_middle"
                    android:textSize="17sp"
                    tools:text="v123" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="?colorDivider" />

            <LinearLayout
                android:id="@+id/llCustomerID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:orientation="vertical"
                android:paddingStart="56dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/customer_id"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tvCustomerID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingEnd="16dp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                    android:textColor="@color/grey_middle"
                    android:textSize="17sp"
                    tools:text="123qweqqeeeqqweewqadsadsadasdsadsadsadadadasddas" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="?colorDivider" />

            <TextView
                android:id="@+id/tvPrivacy"
                style="@style/settings_menu_item"
                android:drawableStart="?drawableLegal"
                android:drawableEnd="@drawable/ic_keyboard_arrow_right_gray_24dp"
                android:text="@string/data_protection_privacy" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="?colorDivider" />

            <TextView
                android:id="@+id/tvSettingsTerms"
                style="@style/settings_menu_item"
                android:drawableStart="?drawableServices"
                android:drawableEnd="@drawable/ic_keyboard_arrow_right_gray_24dp"
                android:text="@string/settings_terms" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="?colorDivider" />

            <TextView
                android:id="@+id/tvSettingsLicenses"
                style="@style/settings_menu_item"
                android:drawableStart="?drawableLicenses"
                android:drawableEnd="@drawable/ic_keyboard_arrow_right_gray_24dp"
                android:text="@string/settings_licenses" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="?colorDivider" />

            <TextView
                android:id="@+id/tvMailOfficer"
                style="@style/settings_menu_item"
                android:drawableStart="?drawableSupport"
                android:drawableEnd="@drawable/ic_keyboard_arrow_right_gray_24dp"
                android:text="@string/data_protection_email_officer" />

        </LinearLayout>


    </ScrollView>


</LinearLayout>