<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivBack"
            style="@style/selectableImage"
            android:src="@drawable/ic_arrow_back_white_24dp" />

        <ImageView
            android:id="@+id/ivUser"
            android:layout_width="52dp"
            android:layout_height="52dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/ivClear"
            style="@style/selectableImage"
            android:src="@drawable/ic_erase_data_white_24dp" />

        <ImageView
            android:id="@+id/ivBlock"
            style="@style/selectableImage"
            android:src="@drawable/ic_block_white_24dp" />

        <ImageView
            android:id="@+id/ivClose"
            style="@style/selectableImage"
            android:src="@drawable/ic_arrow_close_white_24dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider" />

    <com.ringoid.view.ui.view.RecyclerViewMeasureListener xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rvMessages"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingBottom="16dp"
        android:paddingTop="16dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/etMessage"
            android:maxLines="@integer/message_compose_lines_max"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:imeOptions="flagNoPersonalizedLearning"
            android:inputType="textMultiLine"
            android:padding="16dp"
            android:textSize="17sp"
            android:theme="@style/AppTheme.Green" />

        <ImageView
            android:id="@+id/ivSend"
            style="@style/selectableImage"
            android:src="@drawable/ic_send_green_24dp" />

    </LinearLayout>

</LinearLayout>