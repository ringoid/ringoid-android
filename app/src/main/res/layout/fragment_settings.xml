<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.ringoid.view.ui.view.ViewToolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        app:is_show_back="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#f5f5f5" />

            <LinearLayout
                android:id="@+id/llPrivacyPhotos"
                style="@style/settings_menu_item"
                android:orientation="horizontal"
                android:paddingStart="56dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/settings_privacy_item_message"
                        android:text="@string/settings_privacy_photos_message" />

                    <TextView
                        android:id="@+id/tvPrivacyPhotos"
                        style="@style/settings_privacy_item_value"
                        tools:text="Only me" />

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_keyboard_arrow_right_gray_24dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llBlacklist"
                style="@style/settings_menu_item"
                android:orientation="horizontal"
                android:paddingStart="56dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/settings_privacy_item_message"
                        android:text="@string/settings_privacy_phone_blacklist" />

                    <TextView
                        android:id="@+id/tvPrivacyPhoneBlacklistNum"
                        style="@style/settings_privacy_item_value"
                        tools:text="1 phone number" />

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_keyboard_arrow_right_gray_24dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llPrivacyDistance"
                style="@style/settings_menu_item"
                android:orientation="horizontal"
                android:paddingStart="56dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/settings_privacy_item_message"
                        android:text="@string/settings_privacy_location_distance" />

                    <TextView
                        android:id="@+id/tvPrivacyDistance"
                        style="@style/settings_privacy_item_value"
                        tools:text="250m" />

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_keyboard_arrow_right_gray_24dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#f5f5f5" />

            <TextView
                android:id="@+id/tvPush"
                style="@style/settings_menu_item"
                android:drawableEnd="@drawable/ic_keyboard_arrow_right_gray_24dp"
                android:drawableStart="@drawable/ic_settings_push_24dp"
                android:text="@string/push" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#f5f5f5" />

            <TextView
                android:id="@+id/tvDataProtection"
                style="@style/settings_menu_item"
                android:drawableEnd="@drawable/ic_keyboard_arrow_right_gray_24dp"
                android:drawableStart="@drawable/ic_privacy_policy_24"
                android:text="@string/settings_data_protection" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#f5f5f5" />

            <TextView
                android:id="@+id/tvSettingsFeedback"
                style="@style/settings_menu_item"
                android:drawableEnd="@drawable/ic_keyboard_arrow_right_gray_24dp"
                android:drawableStart="@drawable/ic_settings_feedback_24dp"
                android:text="@string/settings_feedback" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#f5f5f5" />

            <TextView
                style="@style/settings_menu_item"
                android:drawableEnd="@drawable/ic_keyboard_arrow_right_gray_24dp"
                android:drawableStart="@drawable/ic_settings_rate_24dp"
                android:text="@string/settings_rate" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#f5f5f5" />

            <TextView
                android:id="@+id/tvLogout"
                style="@style/settings_menu_item"
                android:drawableEnd="@drawable/ic_keyboard_arrow_right_gray_24dp"
                android:drawableStart="@drawable/ic_logout_gray_16dp"
                android:text="@string/settings_logout" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#f5f5f5" />

            <TextView
                android:id="@+id/tvAccountDelete"
                style="@style/settings_menu_item"
                android:drawableEnd="@drawable/ic_keyboard_arrow_right_gray_24dp"
                android:drawableStart="@drawable/ic_remove_red_24dp"
                android:text="@string/settings_delete_account"
                android:textColor="#fb7a7a" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>