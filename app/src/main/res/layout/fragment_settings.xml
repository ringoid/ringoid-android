<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg">

    <ScrollView
        android:id="@+id/svContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                style="@style/settings_menu_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="56dp">

                <TextView
                    style="@style/settings_privacy_item_message"
                    android:text="@string/settings_location"
                    android:textColor="@color/grey_middle" />

                <TextView
                    style="@style/settings_privacy_item_value"
                    android:text="@string/settings_location_value" />

            </LinearLayout>

            <LinearLayout
                style="@style/settings_menu_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="56dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_distance"
                        android:textColor="@color/colorAccentGreen"
                        android:textSize="17sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:text="@string/settings_distance_value"
                        android:textColor="@color/grey_middle"
                        android:textSize="17sp" />

                </FrameLayout>

                <android.support.v7.widget.AppCompatSeekBar
                    android:id="@+id/sbDistance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:paddingEnd="0dp"
                    android:paddingStart="0dp"
                    android:progress="100"
                    android:progressDrawable="@drawable/progress"
                    android:thumb="@drawable/ic_circle_accent_24dp"
                    android:thumbOffset="-1dp" />

            </LinearLayout>

            <com.ringoid.view.ui.view.ViewRange
                android:id="@+id/vrAge"
                style="@style/settings_menu_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="56dp"
                app:title="@string/settings_age"
                app:value="@string/settings_age_value" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/divider" />

            <LinearLayout
                style="@style/settings_menu_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="56dp">

                <TextView
                    style="@style/settings_privacy_item_message"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/settings_who_liked_you"
                    android:textColor="@color/grey_middle" />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:enabled="false" />
            </LinearLayout>

            <LinearLayout
                style="@style/settings_menu_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="56dp">

                <TextView
                    style="@style/settings_privacy_item_message"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/settings_age_my"
                    android:textColor="@color/grey_middle" />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:enabled="false" />
            </LinearLayout>

            <LinearLayout
                style="@style/settings_menu_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="56dp">

                <TextView
                    style="@style/settings_privacy_item_message"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/settings_distance_my"
                    android:textColor="@color/grey_middle" />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:enabled="false" />
            </LinearLayout>

            <LinearLayout
                style="@style/settings_menu_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="56dp">

                <TextView
                    style="@style/settings_privacy_item_message"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/settings_likes_unlimited"
                    android:textColor="@color/grey_middle" />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:enabled="false" />
            </LinearLayout>

            <LinearLayout
                style="@style/settings_menu_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="56dp">

                <TextView
                    style="@style/settings_privacy_item_message"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/settings_ad_hide"
                    android:textColor="@color/grey_middle" />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:enabled="false" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/divider" />

            <LinearLayout
                style="@style/settings_menu_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="56dp">

                <TextView
                    style="@style/settings_privacy_item_message"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/settings_push"
                    android:textColor="@color/grey_middle" />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:enabled="false" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/divider"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvPush"
                style="@style/settings_menu_item"
                android:drawableEnd="@drawable/ic_keyboard_arrow_right_gray_24dp"
                android:drawableStart="@drawable/ic_settings_push_24dp"
                android:text="@string/push"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/divider" />

            <TextView
                android:id="@+id/tvDataProtection"
                style="@style/settings_menu_item"
                android:drawableEnd="@drawable/ic_keyboard_arrow_right_gray_24dp"
                android:drawableStart="@drawable/ic_privacy_policy_24"
                android:text="@string/settings_data_protection" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/divider" />

            <TextView
                android:id="@+id/tvSettingsFeedback"
                style="@style/settings_menu_item"
                android:drawableEnd="@drawable/ic_keyboard_arrow_right_gray_24dp"
                android:drawableStart="@drawable/ic_settings_feedback_24dp"
                android:text="@string/settings_feedback" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/divider" />

            <TextView
                android:id="@+id/tvLogout"
                style="@style/settings_menu_item"
                android:drawableEnd="@drawable/ic_keyboard_arrow_right_gray_24dp"
                android:drawableStart="@drawable/ic_logout_gray_16dp"
                android:text="@string/settings_logout" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/divider" />

            <TextView
                android:id="@+id/tvAccountDelete"
                style="@style/settings_menu_item"
                android:drawableEnd="@drawable/ic_keyboard_arrow_right_gray_24dp"
                android:drawableStart="@drawable/ic_remove_red_24dp"
                android:text="@string/settings_delete_account"
                android:textColor="@color/colorWarning" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>