<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg">

    <com.ringoid.view.ui.view.ViewToolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:is_show_back="true"
        app:toolbar_title="@string/title_settings">

        <ImageView
            android:id="@+id/ivClose"
            style="@style/selectableImage"
            android:layout_gravity="end"
            android:src="@drawable/ic_arrow_close_grey_24dp" />

    </com.ringoid.view.ui.view.ViewToolbar>

    <ScrollView
        android:id="@+id/svContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/toolbar_height_with_statusbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                style="@style/settings_menu_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="56dp">

                <TextView
                    style="@style/settings_privacy_item_message"
                    android:text="@string/settings_location"
                    android:textColor="@color/grey_middle" />

                <TextView
                    style="@style/settings_privacy_item_value"
                    android:text="@string/settings_location_value"
                    android:textColor="@color/grey_dark" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/divider" />

            <TextView
                android:id="@+id/tvDataProtection"
                style="@style/settings_menu_item"
                android:drawableEnd="@drawable/ic_keyboard_arrow_right_gray_24dp"
                android:drawableStart="@drawable/ic_privacy_policy_24"
                android:text="@string/settings_data_protection" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/divider" />

            <TextView
                android:id="@+id/tvSettingsFeedback"
                style="@style/settings_menu_item"
                android:drawableEnd="@drawable/ic_keyboard_arrow_right_gray_24dp"
                android:drawableStart="@drawable/ic_settings_feedback_24dp"
                android:text="@string/settings_feedback" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/divider" />

            <TextView
                android:id="@+id/tvLogout"
                style="@style/settings_menu_item"
                android:drawableEnd="@drawable/ic_keyboard_arrow_right_gray_24dp"
                android:drawableStart="@drawable/ic_logout_gray_16dp"
                android:text="@string/settings_logout" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/divider" />

            <TextView
                android:id="@+id/tvAccountDelete"
                style="@style/settings_menu_item"
                android:drawableEnd="@drawable/ic_keyboard_arrow_right_gray_24dp"
                android:drawableStart="@drawable/ic_remove_red_24dp"
                android:text="@string/settings_delete_account"
                android:textColor="@color/colorWarning" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>