<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:paddingTop="@dimen/toolbar_height_with_statusbar">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llBlacklist"
                style="@style/settings_menu_item"
                android:orientation="horizontal"
                android:paddingStart="56dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/settings_privacy_item_message"
                        android:text="@string/settings_privacy_phone_blacklist" />

                    <TextView
                        android:id="@+id/tvPrivacyPhoneBlacklistNum"
                        style="@style/settings_privacy_item_value"
                        tools:text="1 phone number" />

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_keyboard_arrow_right_gray_24dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llPrivacyDistance"
                style="@style/settings_menu_item"
                android:orientation="horizontal"
                android:paddingStart="56dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/settings_privacy_item_message"
                        android:text="@string/settings_privacy_location_distance" />

                    <TextView
                        android:id="@+id/tvPrivacyDistance"
                        style="@style/settings_privacy_item_value"
                        tools:text="250m" />

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_keyboard_arrow_right_gray_24dp" />

            </LinearLayout>

            <LinearLayout
                style="@style/settings_menu_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="56dp">

                <TextView
                    style="@style/settings_privacy_item_message"
                    android:text="@string/settings_location" />

                <TextView
                    style="@style/settings_privacy_item_value"
                    android:text="@string/settings_location_value" />

            </LinearLayout>


            <LinearLayout
                style="@style/settings_menu_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="56dp">

                <TextView
                    style="@style/settings_privacy_item_message"
                    android:text="@string/settings_distance" />

                <TextView
                    style="@style/settings_privacy_item_value"
                    android:text="@string/settings_distance_value" />

            </LinearLayout>


            <LinearLayout
                style="@style/settings_menu_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="56dp">

                <TextView
                    style="@style/settings_privacy_item_message"
                    android:text="@string/settings_age" />

                <TextView
                    style="@style/settings_privacy_item_value"
                    android:text="@string/settings_age_value" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/divider"
                android:visibility="gone" />

            <LinearLayout
                style="@style/settings_menu_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="56dp">

                <TextView
                    style="@style/settings_privacy_item_message"
                    android:text="@string/settings_location" />

                <TextView
                    style="@style/settings_privacy_item_value"
                    android:text="@string/settings_location_value" />

            </LinearLayout>

            <LinearLayout
                style="@style/settings_menu_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="56dp">

                <TextView
                    style="@style/settings_privacy_item_message"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/settings_who_liked_you" />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:checked="true"
                    android:enabled="false" />
            </LinearLayout>

            <LinearLayout
                style="@style/settings_menu_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="56dp">

                <TextView
                    style="@style/settings_privacy_item_message"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/settings_age_my" />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:checked="true"
                    android:enabled="false" />
            </LinearLayout>

            <LinearLayout
                style="@style/settings_menu_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="56dp">

                <TextView
                    style="@style/settings_privacy_item_message"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/settings_distance_my" />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:checked="true"
                    android:enabled="false" />
            </LinearLayout>

            <LinearLayout
                style="@style/settings_menu_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="56dp">

                <TextView
                    style="@style/settings_privacy_item_message"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/settings_likes_unlimited" />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:checked="true"
                    android:enabled="false" />
            </LinearLayout>

            <LinearLayout
                style="@style/settings_menu_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="56dp">

                <TextView
                    style="@style/settings_privacy_item_message"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/settings_ad_hide" />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:checked="true"
                    android:enabled="false" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/divider"
                android:visibility="gone" />

            <LinearLayout
                style="@style/settings_menu_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="56dp">

                <TextView
                    style="@style/settings_privacy_item_message"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/settings_push" />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:checked="false"
                    android:enabled="false" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/divider"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvPush"
                style="@style/settings_menu_item"
                android:drawableEnd="@drawable/ic_keyboard_arrow_right_gray_24dp"
                android:drawableStart="@drawable/ic_settings_push_24dp"
                android:text="@string/push"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/divider" />

            <TextView
                android:id="@+id/tvDataProtection"
                style="@style/settings_menu_item"
                android:drawableEnd="@drawable/ic_keyboard_arrow_right_gray_24dp"
                android:drawableStart="@drawable/ic_privacy_policy_24"
                android:text="@string/settings_data_protection" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/divider" />

            <TextView
                android:id="@+id/tvSettingsFeedback"
                style="@style/settings_menu_item"
                android:drawableEnd="@drawable/ic_keyboard_arrow_right_gray_24dp"
                android:drawableStart="@drawable/ic_settings_feedback_24dp"
                android:text="@string/settings_feedback" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/divider" />

            <TextView
                android:id="@+id/tvLogout"
                style="@style/settings_menu_item"
                android:drawableEnd="@drawable/ic_keyboard_arrow_right_gray_24dp"
                android:drawableStart="@drawable/ic_logout_gray_16dp"
                android:text="@string/settings_logout" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/divider" />

            <TextView
                android:id="@+id/tvAccountDelete"
                style="@style/settings_menu_item"
                android:drawableEnd="@drawable/ic_keyboard_arrow_right_gray_24dp"
                android:drawableStart="@drawable/ic_remove_red_24dp"
                android:text="@string/settings_delete_account"
                android:textColor="#fb7a7a" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>