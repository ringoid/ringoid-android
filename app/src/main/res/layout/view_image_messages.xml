<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/view_container_images" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivWink"
            style="@style/selectableImage"
            android:src="@drawable/ic_insert_emoticon_black_24dp" />

        <ImageView
            android:id="@+id/ivWinkSuper"
            style="@style/selectableImage"
            android:src="@drawable/ic_insert_emoticon_black_24dp" />

        <TextView
            android:id="@+id/ivMessages"
            style="@style/textImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="?attr/selectableItemBackground"
            android:drawableStart="@drawable/ic_message_black_24dp"
            tools:text="123" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/ivReport"
            style="@style/selectableImage"
            android:src="@drawable/ic_report_black_24dp" />

        <ImageView
            android:id="@+id/ivBlock"
            style="@style/selectableImage"
            android:layout_gravity="end"
            android:src="@drawable/ic_block_black_24dp" />

    </LinearLayout>


</LinearLayout>