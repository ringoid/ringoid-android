<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/vTheme"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:paddingStart="16dp"
    android:paddingTop="12dp"
    android:paddingEnd="16dp"
    android:paddingBottom="12dp">

    <TextView
        android:id="@+id/tvThemeTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/settings_theme_title"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title" />

    <TextView
        android:id="@+id/tvThemeSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/settings_theme_subtitle"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
        app:layout_constraintTop_toBottomOf="@id/tvThemeTitle" />


    <ImageView
        android:id="@+id/ivTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:src="?drawableThemeLogin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>